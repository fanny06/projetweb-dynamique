    <![endif]-->

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Patti-passion</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
               <!--<a class="navbar-brand" href="index.html">Business Casual</a>-->
            </div>
            <!--Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav floatL">
                    <li>
                        <a href="{{ path('core_home') }}">Accueil</a>
                    </li>
                    <li>
                        <a href="{{ path('core_recettes') }}">Recettes</a>
                    </li>
                    <li>
                        <a href="{{ path('core_astuces') }}">Astuces</a>
                    </li>
                    <li>
                        <a href="{{ path('core_contact') }}">Contact</a>
                    </li>
                    
                </ul>
                <form class="navbar-form  floatR">
                    <div class="form-group">
                      <input type="search" class="input-sm form-control research" placeholder="Recherche">
                      <button type="submit" class="btn btn-primary btn-sm logo-research"><span class=" glyphicon glyphicon-eye-open"></span></button>
                    </div>
                    <a class="nav button-connexion floatR" href="{{ path('core_login') }}">Connexion</a>
                </form>
                        
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    
    {% block body %}
    {% endblock %}
    
    </div>
    <!-- /.container -->

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p> &copy; Fanny Tilkin - webdeveloper 2016-2017</p>
                </div>
            </div>
        </div>
    </footer>

    {% block javascript %}
    <script src="{{asset ('js/jquery.js') }}"></script>
    <script src="{{asset ('js/bootstrap.min.js') }}"></script>
    <script>
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    });
    </script>
    {% endblock %}
</body>

</html>
